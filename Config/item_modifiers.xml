				<triggered_effect trigger="onSelfSecondaryActionRayHit" action="AddBuff" target="other" buff="buffInjuryBleeding"/>
		</effect_group>
		
		<property name="PickupJournalEntry" value="augmentGunsTip"/>
	</item_modifier>
	
