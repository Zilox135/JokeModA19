<append xpath="/item_modifiers">

<item_modifier name="modOrganGrinder" installable_tags="meleeToolPickT3Auger" modifier_tags="damage,rare" blocked_tags="noMods" type="attachment">
		<property name="UnlockedBy" value="?"/>
		<property name="CustomIcon" value="apparelBallCap"/> <!-- placeholder icon -->
		<property name="DescriptionKey" value="modOrganGrinderDesc"/>
		<property name="Stacknumber" value="1"/> <property name="Group" value="Mods"/>
		<property name="DropMeshfile" value="#Other/Items?Misc/sack_droppedPrefab.prefab"/>
		
		<item_property_overrides name="*">
			<property name="Material" value="Mmetal"/>
			<property name="Damage_type" value="Piercing"/>
		</item_property_overrides>
		
		<effect_group tiered="false">
			<passive_effect name="EntityDamage" operation="perc_add" value=".5"/>
